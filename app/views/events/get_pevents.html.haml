-provide(:title, "Partner events")
.mybody
	.btn-group.page-header
		=link_to 'CREATE', new_event_path, class: "btn btn-large btn-success"
		=link_to 'PARTNER\'S CALENDAR', 'events/select_partner', remote: :true, class: "btn btn-large btn-primary"
	.span12
		#notation.well
			Users:
			-@users.each_with_index do |user,index|
				%strong=user.name
				#color{:style => "background-color: #{get_color(index)}"}
		#calendar1


%script{:type => 'text/javascript'}
	$(document).ready(function(){
	$('#calendar1').fullCalendar({
	editable: false,
	header: {
	left: 'prev,next today',
	center: 'title',
	right: 'month,agendaWeek,agendaDay'
	},
	defaultView: 'month',
	height: 600,
	width: 940,
	slotMinutes: 30,
	loading: function(bool){
	if (bool) 
	$('#loading').show();
	else 
	$('#loading').hide();
	},
	events: #{@pevents},
	timeFormat: 'h:mm t{ - h:mm t} ',	
	});
	});
